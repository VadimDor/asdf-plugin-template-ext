#!/usr/bin/env bash

set -ueo pipefail
shopt -s dotglob

# shellcheck source=SCRIPTDIR/../lib/utils.bash
source "$(dirname "${BASH_SOURCE[0]}")/../lib/utils.bash"

<YOUR TOOL ELC>_init "install"
<YOUR TOOL ELC>_init_traps

# Install <YOUR TOOL ULC>, building from source if necessary.
# The installation will be placed in ASDF_INSTALL_PATH when complete.
<YOUR TOOL ELC>_install() {
  if [ "$<YOUR TOOL EUC>_DEBUG" = "yes" ]; then
    set -x
  fi

  if [ "$(<YOUR TOOL ELC>_needs_download)" = "yes" ]; then
    die "No <YOUR TOOL LC> source to build or archive to install."
    return 1
  fi

  <YOUR TOOL ELC>_build
  section_start "III. Install (${<YOUR TOOL EUC>_INSTALL_PATH//${HOME}/\~})"

  step_start "cp to ${<YOUR TOOL EUC>_INSTALL_PATH//${HOME}/\~}"
  rm -rf "$<YOUR TOOL EUC>_INSTALL_PATH"
  cp -R "$ASDF_DOWNLOAD_PATH" "$<YOUR TOOL EUC>_INSTALL_PATH"
  step_end "âœ“"

  # Finalize installation
  step_start "mv to ${ASDF_INSTALL_PATH//${HOME}/\~}"
  rm -rf "$ASDF_INSTALL_PATH"
  mv -v "$<YOUR TOOL EUC>_INSTALL_PATH" "$ASDF_INSTALL_PATH"
  step_end "âœ“"

  step_start "ðŸ‘‘ installed <YOUR TOOL ULC> ${ASDF_INSTALL_VERSION}$(<YOUR TOOL ELC>_time)"
  step_end "âœ“"

  if [ "$<YOUR TOOL EUC>_DEBUG" = "yes" ]; then
    set +x
  fi
}

# No exec {fd} redirection with bash 3
# shellcheck disable=SC2001
BASH_MAJOR_VERSION="$(echo "$BASH_VERSION" | sed 's/\..*//')"
if [ "$BASH_MAJOR_VERSION" -ge 4 ]; then
  exec {<YOUR TOOL EUC>_STDOUT}<&1 {<YOUR TOOL EUC>_STDERR}<&2
  {
    <YOUR TOOL ELC>_install
  } 1>>"$(<YOUR TOOL ELC>_log)" 2>>"$(<YOUR TOOL ELC>_log)"
else
  touch "$(<YOUR TOOL ELC>_log)"
  <YOUR TOOL ELC>_install
fi
